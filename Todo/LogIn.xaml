<Window x:Class="Todo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Todo"
        mc:Ignorable="d"
        Title="LogIn" Height="620" Width="800">

    <Grid Margin="0,0,0,-6">
        <Label Content="Добро пожаловать!" HorizontalAlignment="Left" Margin="380,49,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Label Content="Почта" HorizontalAlignment="Left" Margin="380,168,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="380,287,0,0" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="0.552,2.51"/>
        <TextBox HorizontalAlignment="Left" Margin="380,223,0,0" TextWrapping="Wrap" Text="pangcheo0210@gmail.com&#xD;&#xA;" VerticalAlignment="Top" Width="337" TextChanged="TextBox_TextChanged" FontSize="18" BorderThickness="0,0,0,1"/>
        <Image HorizontalAlignment="Left" Height="182" Margin="54,49,0,0" VerticalAlignment="Top" Width="190" Source="/Снимок экрана 2025-09-15 220240.png"/>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="380,448,0,0" VerticalAlignment="Top" Click="Button_Click" RenderTransformOrigin="0.5,0.5" FontSize="22" Width="337" Height="50" Foreground="#FFFEFEFE" Background="#FFEA5656" BorderBrush="White">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15 15 5 5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Регистрация" HorizontalAlignment="Left" Margin="380,508,0,0" VerticalAlignment="Top" FontSize="22" Width="337" Height="50" Background="#FFEA5656" Foreground="White" BorderBrush="White">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5 5 15 15"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBox HorizontalAlignment="Left" Margin="380,339,0,0" TextWrapping="Wrap" Text="Введите пароль&#xD;&#xA;" VerticalAlignment="Top" Width="337" TextChanged="TextBox_TextChanged" FontSize="18" BorderThickness="0,0,0,1" Foreground="#FF928B8B" />
        <Label Content="Восстановить пароль" HorizontalAlignment="Left" Margin="531,393,0,0" VerticalAlignment="Top" FontSize="18"/>

    </Grid>
</Window>
