<Window x:Class="Todo.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Todo"
        mc:Ignorable="d"
        Title="Registration" Height="600" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="182" Margin="54,49,0,0" VerticalAlignment="Top" Width="190" Source="/Снимок экрана 2025-09-15 220240.png"/>
         <Label Content="Welcome back" HorizontalAlignment="Left" Margin="387,29,0,0" VerticalAlignment="Top" FontSize="32"/>
 <Label Content="Имя пользователя" HorizontalAlignment="Left" Margin="389,82,0,0" VerticalAlignment="Top" FontSize="22" Width="205"/>
 <Label Content="Ваша почта" HorizontalAlignment="Left" Margin="389,176,0,0" VerticalAlignment="Top" FontSize="22"/>
 <Label Content="Пароль" HorizontalAlignment="Left" Margin="389,254,0,0" VerticalAlignment="Top" FontSize="22"/>
 <Label Content="Повторите пароль" HorizontalAlignment="Left" Margin="389,337,0,0" VerticalAlignment="Top" FontSize="22"/>
 <TextBox x:Name="Имя"  LostFocus="NameValidation" HorizontalAlignment="Left" Margin="392,129,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="344" FontSize="16" Height="39"  BorderThickness="0,0,0,1" Text="Введите имя пользователя" TextChanged="Имя_TextChanged" Foreground="#FF928B8B"/>
 <TextBox x:Name="email" LostFocus="EmailValidation" HorizontalAlignment="Left" Margin="392,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="344" FontSize="16"  BorderThickness="0,0,0,1" Height="33" Text="exam@yandex.ru" TextChanged="email_TextChanged" Foreground="#FF928B8B"/>

 <TextBox x:Name="Пароль" LostFocus="PasswordValidation" HorizontalAlignment="Left" Margin="392,298,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="344" BorderThickness="0,0,0,1"  FontSize="16" Height="34" Text="Введите пароль" TextChanged="Пароль_TextChanged" Foreground="#FF928B8B"/>
 <TextBox x:Name="Повтор" HorizontalAlignment="Left" Margin="392,381,0,0" TextWrapping="Wrap" Text="Повторите пароль" VerticalAlignment="Top" Width="344" FontSize="16"  BorderThickness="0,0,0,1" Height="37" TextChanged="Повтор_TextChanged" Foreground="#FF928B8B"/>
 <Button Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="387,441,0,0" VerticalAlignment="Top" Width="349" Height="50
         " Background="#FFEA5656" Foreground="White" FontSize="22" BorderThickness="1" BorderBrush="#FFEA5656" Click="Button_Click_1">
     <Button.Resources>
         <Style TargetType="Border">
             <Setter Property="CornerRadius" Value="15 15 5 5"/>
         </Style>
     </Button.Resources>
 </Button>
 <Button Content="Назад" HorizontalAlignment="Left" Margin="387,501,0,0" VerticalAlignment="Top" Width="349" Height="50" Background="#FFEA5656" Foreground="White" FontSize="22" BorderThickness="0,0,0,0" Click="Button_Click">
     <Button.Resources>
         <Style TargetType="Border">
             <Setter Property="CornerRadius" Value="5 5 15 15"/>
         </Style>
     </Button.Resources>
 </Button>


    </Grid>
</Window>
